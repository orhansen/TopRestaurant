@*
    This view is for the form that allows the user to input a restaurant recommendation
*@
@{
    ViewBag.Title = "Submit Restaurant";
}
@model TopRestaurant.Models.RestaurantResponse
<form class="text-center" asp-action="RestaurantInsert" method="post">
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name"/>
    </div>
    <div>
        <label asp-for="RestaurantName">Restaurant Name:</label>
        <input asp-for="RestaurantName"/>
    </div>
    <div>
        <label asp-for="FavDish">Favorite Dish:</label>
        <input asp-for="FavDish" />
    </div>
    <div>
        <label asp-for="RestaurantPhone">Restaurant Phone:</label>
        <input asp-for="RestaurantPhone" />
    </div>
    <div>
        <button type="submit">Submit Restaurant</button>
    </div>
    <div asp-validation-summary="All"></div>
</form>
